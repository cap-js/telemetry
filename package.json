{
  "name": "@cap-js/telemetry",
  "version": "0.0.1",
  "description": "CDS plugin providing automatic OpenTelemetry instrumentation.",
  "repository": "cap-js/telemetry",
  "author": "SAP SE (https://www.sap.com)",
  "homepage": "https://cap.cloud.sap/",
  "license": "SEE LICENSE IN LICENSE",
  "main": "cds-plugin.js",
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "scripts": {
    "lint": "npx eslint .",
    "test": "npx jest --silent"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/core": "^1.11.0",
    "@opentelemetry/instrumentation": "^0.46.0",
    "@opentelemetry/instrumentation-http": "^0.46.0",
    "@opentelemetry/resources": "^1.10.1",
    "@opentelemetry/sdk-metrics": "^1.17.1",
    "@opentelemetry/sdk-trace-base": "^1.10.1",
    "@opentelemetry/sdk-trace-node": "^1.17.1",
    "@opentelemetry/semantic-conventions": "^1.10.1"
  },
  "peerDependencies": {
    "@sap/cds": "^7"
  },
  "devDependencies": {
    "@cap-js/telemetry": "file:.",
    "@cap-js/sqlite": "^1.3.1",
    "axios": "^1.6.2",
    "chai": "^5.0.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^8.52.0",
    "express": "^4.18.2",
    "jest": "^29.7.0"
  },
  "cds": {
    "requires": {
      "telemetry": {
        "instrumentations": {
          "http": {
            "module": "@opentelemetry/instrumentation-http",
            "class": "HttpInstrumentation",
            "config": {
              "ignoreIncomingPaths": [
                "/health"
              ]
            }
          }
        },
        "tracing": {
          "sampler": {
            "kind": "ParentBasedSampler",
            "root": "AlwaysOnSampler"
          },
          "propagators": [
            "W3CTraceContextPropagator"
          ],
          "_hrtime": true,
          "_tx": false
        },
        "metrics": {
          "config": {
            "exportIntervalMillis": 60000
          }
        },
        "kind": "telemetry-to-console"
      },
      "kinds": {
        "telemetry-to-console": {
          "tracing": {
            "exporter": {
              "module": "@cap-js/telemetry",
              "class": "ConsoleSpanExporter"
            }
          },
          "metrics": {
            "exporter": {
              "module": "@cap-js/telemetry",
              "class": "ConsoleMetricExporter"
            }
          }
        },
        "telemetry-to-dynatrace": {
          "tracing": {
            "exporter": {
              "module": "@opentelemetry/exporter-trace-otlp-proto",
              "class": "OTLPTraceExporter"
            }
          },
          "metrics": {
            "exporter": {
              "module": "@opentelemetry/exporter-metrics-otlp-proto",
              "class": "OTLPMetricExporter"
            }
          }
        },
        "telemetry-to-jaeger": {
          "tracing": {
            "exporter": {
              "module": "@opentelemetry/exporter-trace-otlp-proto",
              "class": "OTLPTraceExporter"
            }
          }
        }
      }
    }
  }
}
